# ========================================
# E-CONSULTANCY - CLIENT ENVIRONMENT CONFIGURATION
# ========================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# Note: Only variables prefixed with VITE_ are exposed to the client
# ========================================

# ========================================
# API CONFIGURATION
# ========================================
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api

# ========================================
# WEBSOCKET & REALTIME
# ========================================
VITE_SOCKET_URL=http://localhost:5000

# ========================================
# GOOGLE OAUTH
# ========================================
VITE_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# ========================================
# WEBRTC CONFIGURATION
# ========================================
# STUN Servers (for NAT traversal)
VITE_STUN_SERVER_1=stun:stun.l.google.com:19302
VITE_STUN_SERVER_2=stun:stun1.l.google.com:19302

# TURN Server (if using custom TURN server)
VITE_TURN_SERVER_URL=turn:your-turn-server.com:3478
VITE_TURN_USERNAME=your_turn_username
VITE_TURN_PASSWORD=your_turn_password

# ========================================
# APPLICATION SETTINGS
# ========================================
VITE_APP_NAME=E-Consultancy
VITE_APP_TITLE=Modern Healthcare Made Simple

# Default language
VITE_DEFAULT_LANGUAGE=en

# ========================================
# FEATURE FLAGS
# ========================================
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_VOICE_CONSULTATION=true
VITE_ENABLE_GOOGLE_LOGIN=true

# ========================================
# FILE UPLOAD
# ========================================
# Maximum file size in MB (must match server)
VITE_MAX_FILE_SIZE=10

# ========================================
# ANALYTICS (Optional)
# ========================================
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=your_sentry_dsn

# ========================================
# PRODUCTION DEPLOYMENT
# ========================================
# Use these in production environment
# VITE_API_URL=https://api.your-domain.com
# VITE_SOCKET_URL=https://api.your-domain.com
